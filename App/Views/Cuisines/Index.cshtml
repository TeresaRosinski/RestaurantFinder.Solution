@{
  Layout = "_Layout";
}

@using FoodFinder.Models; 
@model List<FoodFinder.Models.Cuisine>;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisines have been added yet, add a cuisine!</h3>
}

@foreach(Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Type}", "Details", new {id = cuisine.CuisineId})</li>
}
